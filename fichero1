        <media:content url="https://imagenes.elpais.com/resizer/v2/GVADNSHKAFHIBCSNEEJFACYF6I.jpg?auth=d3d0cb86a553dd0ef3675e5a3d05050a45c43f831cd19e34a213c9ef7ee55139" type="image/jpeg" medium="image">
