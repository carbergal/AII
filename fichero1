      <media:content url="https://imagenes.elpais.com/resizer/v2/GL4VZEFD3ENKE5LPIXVCIXUHNM.jpg?auth=cf9abb89845239fd34ef5ef1ae0493d9ff715a669c5ec744444948bd2530395d" type="image/jpeg" medium="image">
        <media:credit>Antonio García (EFE)</media:credit>
        <media:title>El tiempo de la semana</media:title>
