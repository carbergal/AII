      <media:content url="https://imagenes.elpais.com/resizer/v2/U4H5WVDDH5E2HPP35UGFFJSA7U.jpg?auth=2f6fbd7b2a36e0bc8d22855dcf92ccbfa2c3e916c729215be2c7f3209d2bfa23" type="image/jpeg" medium="image">
