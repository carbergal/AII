      <media:content url="https://imagenes.elpais.com/resizer/v2/X5SGMQ3WU6TIFTNBLWZNVBSZQ4.jpg?auth=c0e28e3e4583b90724678bfb51122342ce417abd3fc665b4c41c8da2111ba416" type="image/jpeg" medium="image">
        <media:credit>JAVIER BELVER (EFE)</media:credit>
        <media:title>Visita la planta de Stellantis en Zaragoza</media:title>
        <media:text>Vista de la planta de Stellantis Zaragoza.</media:text>
