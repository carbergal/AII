      <media:content url="https://imagenes.elpais.com/resizer/v2/YMCSYYPZ5ZA7FNZZXYYRW2MH7E.jpg?auth=f077b1909cda835b513c8cd3fe61c08ff57648616f97c0e6e627f95971c67892" type="image/jpeg" medium="image">
